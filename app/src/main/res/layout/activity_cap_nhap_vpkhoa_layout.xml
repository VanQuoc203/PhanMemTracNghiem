<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:layout_height="match_parent"
    android:background="@drawable/background_activitys"
    android:orientation="vertical"
    tools:context=".activitys.ThemVPKhoa_activitys">

    <ImageView
        android:background="@drawable/backgourd_images"
        android:layout_gravity="center"
        android:id="@+id/ivImages"
        android:layout_width="150dp"
        android:scaleType="centerCrop"
        android:layout_height="150dp"/>
    <LinearLayout
        android:paddingVertical="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginBottom="15dp"
            android:padding="15dp"
            android:background="@drawable/background_edittext"
            android:id="@+id/edtTenKhoa"
            android:hint="Tên Khoa"
            android:layout_width="350dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginBottom="15dp"
            android:background="@drawable/background_edittext"
            android:padding="15dp"
            android:id="@+id/edtDiaChi"
            android:hint="Địa chỉ khoa "
            android:layout_width="350dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginBottom="10dp"
            android:padding="20dp"
            android:background="@drawable/background_edittext"
            android:id="@+id/edtMoTaKhoa"
            android:hint="Mô Tả "
            android:layout_width="350dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="30dp"
        android:text="Cập Nhập"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@drawable/background_butons"
        android:layout_gravity="center"
        android:id="@+id/btnCapNhap"
        android:layout_width="320dp"
        android:layout_height="wrap_content"/>
</LinearLayout>